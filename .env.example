# Backend API Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend.vercel.app

# Database (Render will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Stripe Configuration (Required for subscriptions)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PRICE_ID_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_ID_YEARLY=price_your_yearly_price_id

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=sk-your_openai_api_key

# Session Secret (Auto-generated by Render or set manually)
SESSION_SECRET=your_random_session_secret_at_least_32_chars

# Replit Auth (if using Replit Auth)
REPLIT_DB_URL=your_replit_db_url
